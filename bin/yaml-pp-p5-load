#!/usr/bin/perl
use strict;
use warnings;
use 5.010;

use Data::Dumper;
use YAML::PP::Loader;

my ($file) = @ARGV;
my $yaml;

if ($file) {
    $yaml = do { open my $fh, '<', $file or die $!; local $/; <$fh> };
}
else {
    $yaml = do { local $/; <STDIN> };
}

my $ypp = YAML::PP::Loader->new;
my @data = $ypp->Load($yaml);

local $Data::Dumper::Useqq = 1;
print Data::Dumper->Dump([\@data], ['data']);
