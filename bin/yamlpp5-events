#!/usr/bin/perl
use strict;
use warnings;

use Encode;
use YAML::PP::Parser;

my ($file) = @ARGV;

my $parser = YAML::PP::Parser->new(
    receiver => sub {
      my ($self, @args) = @_;
      print encode_utf8(YAML::PP::Parser->event_to_test_suite(\@args)), "\n";
    },
    $file ? (reader => YAML::PP::Reader::File->new) : (),
);
if ($file) {
    $parser->parse_file($file);
}
else {
    my $yaml;
    $yaml = do { local $/; <STDIN> };
    $yaml = decode_utf8($yaml);
    $parser->parse_string($yaml);
}

