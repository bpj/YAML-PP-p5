#!/usr/bin/perl
use strict;
use warnings;
use 5.010;

use YAML::PP::Loader;
use YAML::PP::Dumper;
use Encode;

my ($file) = @ARGV;
my $yaml;

if ($file) {
    $yaml = do { open my $fh, '<', $file or die $!; local $/; <$fh> };
}
else {
    $yaml = do { local $/; <STDIN> };
}
$yaml = decode_utf8($yaml);

my $yppl = YAML::PP::Loader->new(boolean => 'JSON::PP');
my $yppd = YAML::PP::Dumper->new;
my @docs = $yppl->load($yaml);
my $out_yaml = $yppd->dump(@docs);

print encode_utf8 $out_yaml;
