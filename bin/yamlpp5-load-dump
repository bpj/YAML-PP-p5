#!/usr/bin/perl
use strict;
use warnings;

use YAML::PP;
use YAML::PP::Dumper;
use Encode;
use Getopt::Long qw/ GetOptions /;

my ($file) = @ARGV;
my $yaml;

unless ($file) {
    $yaml = do { local $/; <STDIN> };
    $yaml = decode_utf8($yaml);
}

my $ypp = YAML::PP->new(
    schema => [qw/ + Merge /],
    boolean => 'JSON::PP',
    preserve => 1,
    resolve_alias_load => 0,
    resolve_alias_dump => 0,
);
my @docs = $file ? $ypp->load_file($file) : $ypp->load_string($yaml);
my $out_yaml = $ypp->dump_string(@docs);

print encode_utf8 $out_yaml;
