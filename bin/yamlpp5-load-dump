#!/usr/bin/perl
use strict;
use warnings;
use 5.010;

use YAML::PP::Loader;
use YAML::PP::Dumper;
use Encode;

my ($file) = @ARGV;
my $yaml;

unless ($file) {
    $yaml = do { local $/; <STDIN> };
    $yaml = decode_utf8($yaml);
}

my $yppl = YAML::PP::Loader->new(boolean => 'JSON::PP');
my $yppd = YAML::PP::Dumper->new;
my @docs = $file ? $yppl->load_file($file) : $yppl->load_string($yaml);
my $out_yaml = $yppd->dump_string(@docs);

print encode_utf8 $out_yaml;
